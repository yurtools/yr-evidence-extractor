{
  "manifest_version": 3,
  "name": "Evidence Extractor (Side Panel)",
  "version": "1.0.0",
  "description": "Extracts page text and asks an LLM to return facts, claims, and opinions with evidence.",
  "action": {
    "default_title": "Evidence Extractor"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",

    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.moonshot.ai/*",
    "https://api.moonshot.cn/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
